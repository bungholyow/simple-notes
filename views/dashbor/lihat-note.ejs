<div class="container-fluid container-fluid-custom pb-5 mb-5">
  <div class="row mb-4">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/dashbor"> Dashbor</a></li>
          <li class="breadcrumb-item active"><%= note.title %></li>
        </ol>
      </nav>

      <div class="col d-flex justify-content-between align-items-center">
        <h1 class="h3">Lihat Note</h1>

        <button
          type="button"
          class="btn btn-danger me-2"
          data-bs-toggle="modal"
          id="hapusButton"
          data-bs-target="#hapusModal"
        >
          ‚ûñ Hapus
        </button>
      </div>
    </div>
  </div>

  <form
    action="/dashbor/item/<%= noteID %>?_method=PUT"
    method="POST"
    class="position-relative"
  >
    <div
      class="form-group mb-4 position-absolute"
      style="left: 1px; top: 1px; right: 1px"
    >
      <input
        type="text"
        class="form-control fw-bold border-0 fs-4"
        id="title"
        name="title"
        value="<%= note.title %>"
        placeholder="judul"
      />
    </div>

    <div class="form-group mb-4">
      <textarea
        class="form-control pt-5 fs-4"
        id="body"
        name="body"
        placeholder="üñâ tulis note..."
        rows="12"
      >
<%= note.body %></textarea
      >
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-primary btn-lg">‚¨ÜÔ∏è Updet</button>
    </div>
  </form>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="hapusModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Akan menghapus Notes permanen</h5>
        <button
          type="button"
          class="close"
          data-bs-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>
          Hapus note <b class="fw-bold"><%= note.title %> sekarang</b
          ><br /><br />
          Sudah yakin?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Tutup
        </button>

        <form
          action="/dashbor/item-hapus/<%= noteID %>?_method=DELETE"
          method="POST"
          class="position-relative"
        >
          <button type="submit" class="btn btn-primary">Hapus Note</button>
        </form>
      </div>
    </div>
  </div>
</div>
